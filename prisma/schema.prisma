enum ProjectType {
  INTERNAL
  CLIENT
  RESEARCH
  DEVELOPMENT
  MAINTENANCE
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  ON_HOLD
  COMPLETED
  CANCELLED
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(MEDIUM)
  status      TaskStatus   @default(TODO)

  // Dates
  startDate     DateTime? @db.Date
  dueDate       DateTime? @db.Date
  completedDate DateTime? @db.Date

