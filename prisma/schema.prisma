generator client {
  provider = "prisma-client"
  output   = "../src/types/prisma"
}

datasource db {
  provider = "sqlite"
}

model Users {
  id             Int       @id @default(autoincrement())
  name           String
  email          String
  emailVerified  Boolean?  @default(false)
  image          String?
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
  locale         String?   @default("en")
  hashedPassword String
  tokens         Tokens[]

  @@unique([email])
  @@map("users")
}

model Tokens {
  id        Int       @id @default(autoincrement())
  type      String?
  value     String?   @unique
  expiresAt DateTime?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now()) @updatedAt
  userId    Int
  users     Users?    @relation(fields: [userId], references: [id])
}

model Companies {
  id              Int     @id @default(autoincrement())
  name            String?
  address         String?
  telephone       String?
  logo            String?
  email           String?
  defaultCurrency String?
}

model Invoices {
  id           Int            @id @default(autoincrement())
  title        String?
  total        Float?         @default(0)
  status       InvoiceStatus  @default(PENDING)
  date         DateTime?
  updatedAt    DateTime?      @updatedAt
  createdAt    DateTime?      @default(now())
  customerId   String?
  createdById  Int?
  transactions Transactions[]

  customers   Customers? @relation(fields: [customersId], references: [id])
  customersId Int?
}

enum InvoiceStatus {
  IN_PROGRESS
  PENDING
  PAID
  PARTIALLY_PAID
  CANCELLED
}

model Transactions {
  id          Int               @id @default(autoincrement())
  amount      Float             @default(0)
  charge      Float?            @default(0)
  currency    String?
  discount    Float?            @default(0)
  type        TransactionStatus @default(PRODUCT)
  description String?
  date        DateTime          @default(now())
  qty         Int               @default(1)
  tax         Float?
  invoices    Invoices?         @relation(fields: [invoicesId], references: [id])
  invoicesId  Int?
}

enum TransactionStatus {
  SERVICE
  PRODUCT
}

model Customers {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String?
  code      String?
  image     String?
  phone     String?
  address   String?
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  deletedAt DateTime?
  deletedBy Int?
  Invoices  Invoices[]
}
